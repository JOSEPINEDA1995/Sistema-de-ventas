@model List<DepartamentoModelo> // hacemos un modelo de tipo lista 
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
<link rel="stylesheet" href="css/styles.css">
<div class="card">
  <div class="card-header">
    CREAR DEPARTAMENTO
  </div>
  <div class="card-body">
    <a asp-action="Guardar" asp-controller="MantenedorControler" class="btn btn-warning">Crear Nuevo</a>
    <hr/>
    <table class="table table-bordered">
       <thead>
                <tr>
                <th>ID</th>
                <th>NOMBRE</th>
                <th></th>
                </tr>
       </thead>
        <tbody>
                @foreach (var item in Model)
                {
                  <tr>
                     <td>@item.DEP_ID</td>  
                     <td>@item.DEP_NOMBRE</td>  
                     <td>
                         <a  asp-action="Editar" asp-controller="MantenedorControler"   class="btn btn-success" 
                          asp-route-idDepa="@item.DEP_ID">Modificar</a>
                     </td>   
                 </tr>
                    
                } 
       </tbody>

    </table>
    

  </div>
</div>
