@model DepartamentoModelo //permite accesar formulario
@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
<link rel="stylesheet" href="css/styles.css">
<div class="card">
  <div class="card-header">
    EDITAR DEPARTAMENTO
  </div>
  <div class="card-body">
  

       <!--hacemos referencia al controlador y mandara la data 
           asp-accion es la accion del controlador o el nombre del metodo
           asp-controler refencia a la carpeta nombre de la clase
           metodo a utilizar siempre POST
       -->
      <form asp-action="Editar" asp-controller="MantenedorControler" method="post">
              
             
              
                <input asp-for="DEP_ID" type="hidden" class="form-control"  >
              
              <div class="mb-3">
                <label  class="form-label">NOMBRE</label>
                <!--asp-fro nos permite acceder a la clase modelo donde podesmos ir a traer las variables-->
                <input asp-for="DEP_NOMBRE" type="text" class="form-control" >
                <span asp-validation-for="DEP_NOMBRE"class="text-danger"></span>
              </div>
              
              <button type="submit" class="btn btn-primary">Guardar</button>
              <a asp-action="listar" asp-controller="MantenedorControler" class="btn btn-warning">Volver a la lista</a>
      </form>

  </div>
</div>

